<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nag_graph"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/upcomingFragment"
        android:name="com.example.tripaya.fragments.UpcomingFragment"
        android:label="UpcomingFragment"
        tools:layout="@layout/fragment_upcoming">
        <action
            android:id="@+id/action_upcomingFragment_to_addTripFragment2"
            app:destination="@id/addTripFragment2" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.tripaya.fragments.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.tripaya.fragments.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/addTripFragment2"
        android:name="com.example.tripaya.fragments.AddTripFragment"
        android:label="fragment_add_trip"
        tools:layout="@layout/fragment_add_trip" />

    <fragment
        android:id="@+id/login"
        android:name="com.example.tripaya.Authentication.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/login_to_register"
            app:destination="@id/register" />
        <action
            android:id="@+id/login_to_forgotPassword"
            app:destination="@id/forgotPassword" />
        <action
            android:id="@+id/login_to_upcomingFragment"
            app:destination="@id/upcomingFragment" />
    </fragment>
    <fragment
        android:id="@+id/register"
        android:name="com.example.tripaya.Authentication.Register"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/register_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.example.tripaya.Authentication.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/forgotPassword_to_login"
            app:destination="@id/login" />
    </fragment>
</navigation>